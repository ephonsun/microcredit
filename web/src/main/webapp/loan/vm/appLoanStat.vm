<script type="text/javascript">
    var r= $('#role').val();
    $("#taskObj").val(r);
    $('#s1').click(function(){
        $('#t1').show();
        $('#t2').hide();
        $('#t3').hide();
    });
    $('#s2').click(function () {
        $('#t1').hide();
        $('#t2').show();
        $('#t3').hide();
    });
    $('#s3').click(function () {
        $('#t1').hide();
        $('#t2').hide();
        $('#t3').show();
    });
    //当开始年结束年相等，控制开始月份不能大于结束月份
    $('#startMonth').change(function () {
        var a=$('#startYear').val();
        var b=$('#endYear').val();
        var c=parseFloat($('#endMonth').val());
        var d=parseFloat($(this).val());
        if(a==b){
//                debugger
            if(d>=c){
                $('#startMonth').val(c);
                $('select').selectbox({});
            }
        }
    });
    $('#endMonth').change(function () {
        var a=$('#startYear').val();
        var b=$('#endYear').val();
        var c=parseFloat($('#startMonth').val());
        var d=parseFloat($(this).val());
        if(a==b){
            if(d<=c){
                $('#endMonth').val(c);
                $('select').selectbox({});
            }
        }
    });

    //当开始年结束年相等，控制开始季度不能大于结束季度
    $('#startMonth1').change(function () {
        var a=$('#startYear1').val();
        var b=$('#endYear1').val();
        var c=$('#endMonth1').val();
        var d=$(this).val();
        if(a==b){
            if(d>c){
                $('#startMonth1').val(c);
                $('select').selectbox({});
            }
        }
    });
    $('#endMonth1').change(function () {
        var a=$('#startYear1').val();
        var b=$('#endYear1').val();
        var c=$('#startMonth1').val();
        var d=$(this).val();
        if(a==b){
            if(d<c){
                $('#endMonth1').val(c);
                $('select').selectbox({});
            }
        }
    });
</script>
